<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <div class="card">
      <div class="card-header">
        <h1 class="card-header-title">Create An Account</h1>
      </div>
      <div class="card-content">
        <%= form_for @user do |f| %>
        <div class="field is-horizontal">
          <div class="field-body">
            <div class="field">
              <%= f.text_field :first_name, placeholder: "First name...", class: "input" %>
            </div>
            <div class="field">
              <%= f.text_field :last_name, placeholder: "Last name...", class: "input" %>
            </div>
          </div>
        </div>
          <div class="field">
            <%= f.text_field :email, placeholder: "Email...", class: "input" %>
          </div>
          <div class="field">
            <%= f.password_field :password, placeholder: "Password...", class: "input" %>
          </div>
          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "Password confirmation...", class: "input" %>
          </div>
          <div class="field">
            <%= f.submit "Register", class: "button is-primary" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
      </div>
    </div>
  </div>
