<% content_for :content_outside_container do %>
  <section class="hero is-medium is-primary is-bold is-large  has-text-centered">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Fantasy Foosball
        </h1>
        <h2 class="subtitle">
          Better way to manage your football matches
        </h2>
        <div class="field is-grouped is-grouped-centered">
          <p class="control">
            <%= link_to "Teams", teams_path, class: 'button is-info is-medium'%>
          </p>
          <p class="control">
            <%= link_to "Players", users_path, class: 'button is-warning is-medium'%>
          </p>
          <p class="control">
            <%= link_to "Matches", matches_path, class: 'button is-danger is-medium'%>
          </p>
        </div>
      </div>
    </div>
  </section>
<% end %>