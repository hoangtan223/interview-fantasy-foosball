<table class="table">
  <thead>
    <tr>
      <th><abbr title="Match Id">Id</abbr></th>
      <th>Home Team</th>
      <th><abbr title="Played">Score</abbr></th>
      <th><abbr title="Won">Away Team</abbr></th>
      <th><abbr title="Drawn">Status</abbr></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><abbr title="Match Id">Id</abbr></th>
      <th>Home Team</th>
      <th><abbr title="Played">Score</abbr></th>
      <th><abbr title="Won">Away Team</abbr></th>
      <th><abbr title="Drawn">Status</abbr></th>
    </tr>
  </tfoot>
  <tbody>
    <% if @matches.present? %>
      <% @matches.each do |match| %>
        <%= render 'match_row', match: match %>
      <% end%>
    <% end %>
  </tbody>
</table>