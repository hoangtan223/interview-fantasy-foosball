<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <div class="card">
      <div class="card-header">
        <h1 class="card-header-title">Sign In</h1>
      </div>
      <div class="card-content">
        <%= form_tag sign_in_path do |f| %>
          <div class="field">
          <label class="label">Email</label>
            <%= text_field_tag :email, nil, placeholder: "Email...", class: "input" %>
          </div>
          <div class="field">
          <label class="label">Password</label>
            <%= password_field_tag :password, nil , placeholder: "Password...", class: "input" %>
          </div>
          <div class="field">
            <%= submit_tag "Sign In", class: "button is-primary" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
      </div>
    </div>
  </div>
