<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <div class="card">
      <div class="card-header">
        <h1 class="card-header-title">Create new team</h1>
      </div>
      <div class="card-content">
        <%= form_for @team do |f| %>
          <div class="field">
          <label class="label">Team name</label>
            <%= f.text_field :name, placeholder: "Team name...", class: "input" %>
          </div>
          <div class="field">
            <div class="file has-name">
              <label class="file-label">
                <%= f.file_field :image_url, class: 'file-input', id: 'file' %>
                <span class="file-cta">
                  <span class="file-icon">
                    <i class="fa fa-upload"></i>
                  </span>
                  <span class="file-label">
                    Choose a logoâ€¦
                  </span>
                </span>
                <span class="file-name" id="filename">
                  No file selected!
                </span>
              </label>
            </div>
          </div>
          <div class="field">
            <%= submit_tag "Create", class: "button is-primary" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
      </div>
    </div>
  </div>
