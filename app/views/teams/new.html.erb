<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <div class="card">
      <div class="card-header">
        <h1 class="card-header-title">Create new team</h1>
      </div>
      <div class="card-content">
        <%= form_for @team do |f| %>
          <div class="field">
          <label class="label">Team name</label>
            <%= f.text_field :name, placeholder: "Team name...", class: "input" %>
          </div>
          <div class="field">
          <label class="label">Logo url</label>
            <%= f.text_field :image_url,  placeholder: "Logo url...", class: "input" %>
          </div>
          <div class="field">
            <%= submit_tag "Create", class: "button is-primary" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
      </div>
    </div>
  </div>
